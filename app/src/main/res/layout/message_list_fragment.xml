<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CACCD3">

    <TextView
        android:id="@+id/message_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MESSAGE LIST FRAGMENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToNewMessageFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO NEW MESSAGE FRAGMENT"
        app:layout_constraintBottom_toTopOf="@+id/buttonToMessageFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_list_textview" />

    <Button
        android:id="@+id/buttonToMessageFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO MESSAGE FRAGMENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_list_textview" />


</androidx.constraintlayout.widget.ConstraintLayout>